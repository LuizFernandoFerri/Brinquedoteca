        <div class="mt-3 mb-5">
            <div class="row">
                <div class="col-md-3">
                    <label for="codUsuario">Código cliente</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control " id="codUsuario" asp-for="CodUsuario" />

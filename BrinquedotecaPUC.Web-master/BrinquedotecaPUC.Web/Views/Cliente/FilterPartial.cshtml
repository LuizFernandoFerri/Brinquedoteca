                        </select> *@
                        
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="cpf">CPF</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="cpf" name="cpf" aria-describedby="basic-addon1" maxlength="14" asp-for="Cpf" />
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="nome">Nome</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="nome" asp-for="Nome" />
                    </div>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-outline-primary btn-sm px-4 mb-3 float-end">

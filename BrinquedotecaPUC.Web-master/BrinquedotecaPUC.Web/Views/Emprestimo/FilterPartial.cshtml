@using BrinquedotecaPUC.Web.Models;

@model EmprestimoFiltroViewModel;

@using (Html.BeginForm("ListaEmprestimos", "Emprestimo", FormMethod.Get, new { id = "formFilter" }))
{
    <section>
        <div class="mt-3 mb-5">
            <div class="row">
                <div class="col-md-3">
                    <label for="codUsuario">Código emprésimo</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control " id="codUsuario" asp-for="CodEmprestimo" />
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="nomeCliente">Nome do cliente</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" aria-describedby="basic-addon1" asp-for="NomeCliente" />
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="nomeCliente">Nome do brinquedo</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" aria-describedby="basic-addon1" asp-for="NomeBrinquedo" />
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="dataEmprestimo">Data empréstimo</label>
                    <div class="input-group mb-3">
                        <input type="date" class="form-control" asp-for="DataEmprestimo" />
                    </div>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-outline-primary btn-sm px-4 mb-3 float-end">
                    <i class="fa fa-search" aria-hidden="true"> </i><span> Pesquisar </span>
                </button>
            </div>
        </div>
    </section>
}